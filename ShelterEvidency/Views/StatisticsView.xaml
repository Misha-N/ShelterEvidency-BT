            <TextBlock TextWrapping="Wrap" Text="Celkové příspěvky:" Margin="5"/>
            <TextBlock x:Name="TotalDonations" Margin="5" Text="{Binding Path=TotalDonations, Mode=OneWay}"/>
        </StackPanel>


    </Grid>
    -->
</UserControl>
